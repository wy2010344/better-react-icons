{
  "compilerOptions": {
    "outDir": "./build/lib",
    "emitDeclarationOnly": true,
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.tsx",
    "src/iconBase.ts",
    "src/iconContext.ts"
  ],
  "exclude": [
    "icons"
  ]
}
